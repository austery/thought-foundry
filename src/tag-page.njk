---
pagination:
  data: collections.tagList
  size: 1
  alias: tag
layout: "base.njk"
permalink: "/tags/{{ tag | slug }}/"
---

<h1>标签：{{ tag }}</h1>

<ul>
  {%- for post in collections[tag] | reverse -%}
    <li>
      <a href="{{ post.url }}">
        {{ post.data.title }}
      </a>
    </li>
  {%- endfor -%}
</ul>