    "governance": {
        "tag_rules": {
            "case": "lowercase",
            "separator": "kebab-case",
            "enforce_singular": true,
            "singular_exceptions": [
                "news", "series", "species", "logistics", "graphics",
                "sales", "operations", "analysis", "analytics", "statistics",
                "hypothesis", "thesis", "crisis", "business", "process",
                "success", "access", "happiness", "wellness", "fitness",
                "awareness", "consciousness", "kindness", "bias", "loss",
                "focus", "stimulus", "surplus", "ethics", "mathematics",
                "physics", "economics", "politics", "geopolitics", "progress",
                "acumen", "emptiness", "competitiveness", "weakness",
                "correctness", "fairness", "stress", "distress", "relations"
            ]
        }
    },
    "taxonomy": {
